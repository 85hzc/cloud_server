html
    head
        title 修改插件
        link(rel='stylesheet' href='/stylesheets/style.css')
    body
        div.place
            span 位置：
            ul.placeul
                li
                    a 插件管理
                li
                    a 修改插件信息
        br
        br
        br
        div.contentcenter
            br
            h4 修改插件
            br
            br
            form(method='post' action='/plugin/updatePlugin')
                div.form-row
                    label 插件名称：
                    input(type='text' name='plugname' value='#{plugname}' readOnly='readOnly')
                    br
                    br
                    br
                div.form-row
                    label 插件描述：
                    - if ('null' == plugdesc || null == plugdesc || '' == plugdesc) {
                        input(type='text' name='plugdesc')
                    - } else {
                        input(type='text' name='plugdesc' value='#{plugdesc}')
                    - }
                    br
                    br
                    br
                    input(type='submit' value='确认修改').saveandcancle
                    |&nbsp;&nbsp;&nbsp;&nbsp;
                    input(type='reset' value='重置').saveandcancle
